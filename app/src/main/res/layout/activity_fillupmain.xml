<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fillupspinner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fillupmain">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/official_seal_of_batangas_state_university" />

                <EditText
                    android:id="@+id/FULLNAME"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/EMAIL"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/PASSWORD"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Home Address"
                    android:inputType="textPostalAddress" />

                <TextView
                    android:id="@+id/fillyearsection"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Year/Section"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/fillyear"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-65dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/fillyear" />

                <Spinner
                    android:id="@+id/fillsection"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-41dp"
                    android:entries="@array/fillsection"
                    app:layout_constraintLeft_toRightOf="@id/fillyear" />

                <Spinner
                    android:id="@+id/fillgender"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-90dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/gender" />

                <EditText
                    android:id="@+id/srcode"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="-77dp"
                    android:layout_marginTop="10dp"
                    android:hint="SR-Code"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="-77dp"
                    android:layout_marginTop="10dp"
                    android:hint="Contact Number"
                    android:inputType="number" />




                <TextView
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Birthdate"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <DatePicker
                    android:id="@+id/datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <TextView
                    android:id="@+id/gadget"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:hint="Gadgets"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="-32.5dp"
                    android:hint="Quantity"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    app:layout_constraintLeft_toRightOf="@id/gadget"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:hint="Mobile Phone"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                    android:inputType="textPostalAddress" />

                <Spinner
                    android:id="@+id/cmobile"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-43dp"
                    android:entries="@array/qmobile"
                    app:layout_constraintLeft_toRightOf="@id/mobile" />

                <TextView
                    android:id="@+id/tablet"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:hint="Tablet"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                    android:inputType="textPostalAddress" />

                <Spinner
                    android:id="@+id/ctablet"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-43dp"
                    android:entries="@array/qtablet"
                    app:layout_constraintLeft_toRightOf="@id/tablet" />

                <EditText
                    android:id="@+id/laptop"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Laptop"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                    android:inputType="textPostalAddress" />

                <Spinner
                    android:id="@+id/claptop"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-43dp"
                    android:entries="@array/qlaptop"
                    app:layout_constraintLeft_toRightOf="@id/laptop" />

                <EditText
                    android:id="@+id/desktop"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Desktop"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                    android:inputType="textPostalAddress" />

                <Spinner
                    android:id="@+id/cdesktop"
                    android:layout_width="122dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-43dp"
                    android:entries="@array/qdesk"
                    app:layout_constraintLeft_toRightOf="@id/desktop" />

                <EditText
                    android:id="@+id/internet"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="Internet"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                    android:inputType="textPostalAddress" />

                <Spinner
                    android:id="@+id/cinternet"
                    android:layout_width="117dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="-43dp"
                    android:entries="@array/qinternet"
                    app:layout_constraintLeft_toRightOf="@id/internet" />

                <TextView
                    android:id="@+id/pinfo"
                    android:layout_width="149dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Parent's Info"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/guardianname"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Guardian's Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/guardiancontact"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Guardian's Contact Number"
                    android:inputType="text|phone" />

                <Button
                    android:id="@+id/btnsignup"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Submit" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>