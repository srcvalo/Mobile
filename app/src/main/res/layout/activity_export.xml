<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Export">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/official_seal_of_batangas_state_university"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="109dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-96dp"
                android:text="Name:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/exportname"
                android:layout_width="192dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="-51.5dp"
                android:text=""
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="109dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-96dp"
                android:text="Section:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/exportsection"
                android:layout_width="192dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="-51.5dp"
                android:text=""
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="109dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-96dp"
                android:text="SrCode:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/exportsr"
                android:layout_width="192dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="-51.5dp"
                android:text=""
                android:textSize="30sp" />

            <Button
                android:id="@+id/exportsubj"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Enrolled Subjects" />

            <Button
                android:id="@+id/exportprint"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Print Student Information" />

            <Button
                android:id="@+id/exportlogout"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Logout" />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>